<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">


    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="1-Noun" />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:textColor="@color/phonetic_text_color"
        android:textSize="12sp"
        tools:text="The locality where a thing is usually found, or was first found, or where it is naturally abundant; habitat; seat." />

    <TextView
        android:id="@+id/tvExampleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/example"
        android:textColor="@color/phonetic_text_color"
        android:textSize="12sp"
        tools:text="Example" />

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:textColor="@color/example_text_color"
        android:textSize="12sp"
        tools:text="Example" />


</LinearLayout>